# RetailGen AI - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to Git!

# =============================================================================
# CONVEX
# =============================================================================
# Get these from: https://dashboard.convex.dev
CONVEX_DEPLOYMENT=your-deployment-name
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_JWT_ISSUER_DOMAIN=https://your-clerk-issuer.clerk.accounts.dev
# =============================================================================
# CLOUDINARY
# =============================================================================
# Get these from: https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# OPENAI
# =============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# =============================================================================
# REPLICATE
# =============================================================================
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_...

# =============================================================================
# AI IMAGE GENERATION PROVIDER
# =============================================================================
# Choose which AI provider to use for image generation:
# - 'pollinations' (default): Free, no API key needed, instant generation
# - 'openai': DALL-E 3, requires billing, highest quality ($0.04/image)
# 
# To use OpenAI DALL-E 3, set: AI_PROVIDER=openai
# To use free Pollinations, set: AI_PROVIDER=pollinations (or leave blank)
AI_PROVIDER=pollinations

# =============================================================================
# GOOGLE CLOUD VISION
# =============================================================================
# Path to your Google Cloud service account JSON file
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account.json

# =============================================================================
# SENTRY (Optional - Error Tracking)
# =============================================================================
# Get from: https://sentry.io
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# =============================================================================
# POSTHOG (Optional - Analytics)
# =============================================================================
# Get from: https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# SECURITY
# =============================================================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Set to 'production' in production environment
NODE_ENV=development

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit this file with real values to Git
# 2. Keep .env.local in .gitignore
# 3. Use different values for dev/staging/production
# 4. Rotate secrets regularly
# 5. Use a secret management service in production (AWS Secrets Manager, etc.)
